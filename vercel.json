{
  "version": 2,
  "name": "gupshup-cafe-frontend",
  "buildCommand": "npm run build --prefix client",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --prefix client",
  "env": {
    "VITE_API_URL": "https://gupshup-cafe.onrender.com",
    "VITE_SOCKET_URL": "https://gupshup-cafe.onrender.com",
    "VITE_ENABLE_AI_TOPICS": "true",
    "VITE_ENABLE_AUDIO": "true"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
